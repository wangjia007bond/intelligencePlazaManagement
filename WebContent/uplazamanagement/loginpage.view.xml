<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="uplazamanagement.loginpage" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page id="loginpage" showHeader="false" enableScrolling="false" showFooter="false" >
		<content>
			<Image src="image/Rectangle 6 + 275773_h_ergb_s_gl.png" width="1024px" height="744px"  densityAware="false"/> 		
			<Image src="image/Oval 11 + 276095_h_ergb_s_gl@2x.png" class="loginPortrait" width="135px" height="135px" densityAware="false" /> 
			<Image src="image/U Plaza Management S@2x.png" class="loginLogo" width="273px" height="23px" densityAware="false" /> 
			<Image src="image/Rectangle 57@2x.png" class="loginButton" width="195px" height="40px" densityAware="false" press="onLogin"/> 
			<Image src="image/Line@2x.png" class="loginLine1" width="193px" height="2px" densityAware="false" /> 
			<Image src="image/Line@2x.png" class="loginLine2" width="193px" height="2px" densityAware="false" /> 
			<Text text="LOGIN" class="loginText"/>
		
			<Input class="loginName"
				placeholder="username" />
			<Input class="loginPsw"
				type="Password"
				placeholder="password" />
			
		</content>
	</Page>
</core:View>